<UserControl x:Class="SalesEntry.Views.SalesDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            
            <Label Content="{Binding LineNo}" Grid.Column="0"/>
            <TextBox Text="{Binding ProductCode}" Grid.Column="1"/>
            <TextBox Text="{Binding ProductName}" Grid.Column="2"/>
            <TextBox Text="{Binding Qty}" Grid.Column="3" />
            <TextBox Text="{Binding Unit}" Grid.Column="4"/>
            <TextBox Text="{Binding Cost}" Grid.Column="5"/>
            <TextBox Text="{Binding UnitPrice}" Grid.Column="6"/>
            <Label Content="{Binding Price}" Grid.Column="7"/>

        </Grid>


    </Grid>
</UserControl>
